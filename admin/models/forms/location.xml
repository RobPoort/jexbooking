<?xml version="1.0" encoding="UTF-8"?>
<form
	addrulepath="/administrator/components/com_jexbooking/models/rules"
>
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="name"
			type="text"
			label="COM_JEXBOOKING_LOCATION_NAME_LABEL"
			description="COM_JEXBOOKING_LOCATION_NAME_DESC"
			required="true"
			class="inputbox"
			size="80"
			default=""
		/>
		<field
			name="desc"
			type="text"
			label="COM_JEXBOOKING_LOCATION_DESC_LABEL"
			description="COM_JEXBOOKING_LOCATION_DESC_DESC"
			required="false"
			class="inputbox"
			size="100"
			default=""
		/>
		<field
			name="total_number"
			type="text"
			label="COM_JEXBOOKING_LOCATION_TOTAL_NUMBER_LABEL"
			description="COM_JEXBOOKING_LOCATION_TOTAL_NUMBER_DESC"
			class="inputbox"
			size="4"
			default=""
			required="false"
		/>
		<field
			name="available_number"
			type="text"
			label="COM_JEXBOOKING_LOCATION_TOTAL_AVAILABLE_LABEL"
			description="COM_JEXBOOKING_LOCATION_TOTAL_AVAILABLE_DESC"
			size="4"
			default=""
			required="false"
		/>
		<field
			name="type_id"
			type="locationtype"
			label="COM_JEXBOOKING_LOCATION_TYPE_LABEL"
			description="COM_JEXBOOKING_LOCATION_TYPE_DESC"
			default=""
			required="true"
		/>
		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="JSTATUS"
			default="0"
		>
			<option value="0">JUNPUBLISHED</option>
			<option value="1">JPUBLISHED</option>
		</field>	
	</fieldset>
	<fieldset name="attributen"
	>
		<field
			name="attribute_id"
			type="attributenlocations"
			label="attributen"
			description=""
			required="false"
			multiple="true"
			default=""			
		/>
	</fieldset>	
</form>