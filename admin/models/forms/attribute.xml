<?xml version="1.0" encoding="UTF-8"?>
<form
	addrulepath="/administrator/components/com_jexbooking/models/rules"
>
	<fieldset name="details"
	>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="name"
			type="text"
			label="COM_JEXBOOKING_ATTRIBUTE_NAME_LABEL"
			description="COM_JEXBOOKING_ATTRIBUTE_NAME_DESC"
			required="true"
			class="inputbox"
			size="80"
			default=""
		/>
		<field
			name="desc"
			type="editor"
			label="COM_JEXBOOKING_ATTRIBUTE_DESC_LABEL"
			description="COM_JEXBOOKING_ATTRIBUTE_DESC_DESC"
			required="false"
			default=""
		/>
		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="JSTATUS"
			default="0"
		>
			<option value="0">JUNPUBLISHED</option>
			<option value="1">JPUBLISHED</option>
		</field>
	</fieldset>	
</form>